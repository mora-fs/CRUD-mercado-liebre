<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->
			<% visiteds.forEach(visited => { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/<%=visited.id%>">
						<figure class="product-box_image">
							<img src="/images/products/<%=visited.image%>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2><%=visited.price%> $</h2>
							<% if (visited.discount>0) { %>
								<span><%=visited.discount%>% OFF</span>
							<% } %> 
							<p><%=visited.name%></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div> 
			<% }) %>
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<% sales.forEach(sales => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%=sales.id%>">
							<figure class="product-box_image">
								<img src="/images/products/<%=sales.image%>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2><%=sales.price%> $</h2>
								<span><%=sales.discount%>% OFF</span>
								<p><%=sales.name%></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div> 
			<% }) %>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>